---
import AuthLayout from '../layouts/AuthLayout.astro';
import { ForgotPasswordForm } from '../components/Auth/ForgotPasswordForm';
---

<AuthLayout title="Forgot Password - Open Design Docs">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-88px)]">
    <div class="w-full max-w-[420px] px-4">
      <div class="mb-8 text-center">
        <h1 class="text-[28px] font-semibold text-gray-900 mb-2">
          Reset your password
        </h1>
        <p class="text-[15px] text-gray-600">
          Enter your email address and we'll send you a link to reset your password
        </p>
      </div>

      <ForgotPasswordForm client:load />
    </div>
  </div>
</AuthLayout>
