---
import AuthLayout from '../layouts/AuthLayout.astro';
import SignUpForm from '../components/Auth/SignUpForm.astro';
---

<AuthLayout title="Sign Up - Open Design Docs">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-88px)]">
    <div class="w-full max-w-[420px] px-4">
      <div class="mb-8 text-center">
        <h1 class="text-[28px] font-semibold text-gray-900 mb-2">
          Create your account
        </h1>
        <p class="text-[15px] text-gray-600">
          Already have an account?{' '}
          <a href="/login" class="text-blue-600 hover:text-blue-700">Log in</a>
        </p>
      </div>

      <SignUpForm />
    </div>
  </div>
</AuthLayout>
