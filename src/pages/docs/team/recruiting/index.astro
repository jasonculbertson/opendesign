---
import { getEntry } from 'astro:content';
import Layout from '../../../../layouts/Layout.astro';
import Card from '../../../../components/Card.astro';

const entry = await getEntry('docs', 'team/recruiting/index');
const { Content } = await entry.render();

const resources = [
  {
    title: 'Job Descriptions (JDs)',
    description: 'Standardized job descriptions for seamless hiring',
    href: '/docs/team/recruiting/job-descriptions-jds',
    image: 'ðŸ“¢'
  },
  {
    title: 'Interview Panels - coming soon',
    description: 'Structured questions for panel interviews',
    href: '/docs/team/recruiting/interview-panels',
    image: 'ðŸš§'
  }
];

const breadcrumbs = [
  { text: 'Team', href: '/docs/team' },
  { text: 'Recruiting', href: '/docs/team/recruiting' }
];

const title = "Recruiting";
---

<Layout title={title}>
  <main class="py-8 px-4 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto">
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center">
              {index > 0 && <span class="mx-2 text-gray-400">/</span>}
              {crumb.href ? (
                <a href={crumb.href} class="text-sm text-gray-600 hover:text-gray-900">
                  {crumb.text}
                </a>
              ) : (
                <span class="text-sm text-gray-600">{crumb.text}</span>
              )}
            </li>
          ))}
        </ol>
      </nav>
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
      </div>
      <div class="grid grid-cols-1 gap-4">
        {resources.map(resource => (
          <Card {...resource} />
        ))}
      </div>
    </article>
  </main>
</Layout>