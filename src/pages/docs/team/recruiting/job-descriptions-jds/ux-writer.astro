---
import Layout from '../../../../../../layouts/CompetencyLayout.astro';
import Card from '../../../../../../components/Card.astro';

const breadcrumbs = [
  { text: 'Home', href: '/' },
  { text: 'Team', href: '/docs/team' },
  { text: 'Recruiting', href: '/docs/team/recruiting' },
  { text: 'Job Descriptions', href: '/docs/team/recruiting/job-descriptions-jds' },
  { text: 'UX Writer', href: '/docs/team/recruiting/job-descriptions-jds/ux-writer' }
];
---

<Layout title="UX Writer" breadcrumbs={breadcrumbs}>
  <div class="space-y-8">
    <div class="prose dark:prose-invert">
      <h1>UX Writer</h1>
      <p>
        UX Writers at [Company Name] craft clear, concise, and engaging content that guides users through our digital experiences. 
        They work closely with designers, researchers, and product teams to create content that is both user-friendly and aligned with our brand voice.
      </p>
    </div>

    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <Card emoji="🌱" title="Writer I" href="/docs/team/recruiting/job-descriptions-jds/ux-writer/writer-1" level="L3">
        Entry-level position focused on crafting clear UI copy and collaborating with design teams.
      </Card>

      <Card emoji="⚡" title="Writer II" href="/docs/team/recruiting/job-descriptions-jds/ux-writer/writer-2" level="L4">
        Mid-level role handling broader content responsibilities and contributing to content strategy.
      </Card>

      <Card emoji="🚀" title="Senior Writer" href="/docs/team/recruiting/job-descriptions-jds/ux-writer/senior-writer" level="L5">
        Leads content strategy for product areas and mentors junior writers.
      </Card>

      <Card emoji="👥" title="Lead Writer" href="/docs/team/recruiting/job-descriptions-jds/ux-writer/lead-writer" level="L6">
        Guides content vision across major product areas and leads writer teams.
      </Card>

      <Card emoji="⭐" title="Staff Writer" href="/docs/team/recruiting/job-descriptions-jds/ux-writer/staff-writer" level="L7">
        Drives content strategy for complex product areas and innovations.
      </Card>

      <Card emoji="🎯" title="Principal Writer" href="/docs/team/recruiting/job-descriptions-jds/ux-writer/principal-writer" level="L8">
        Shapes content vision and strategy across the entire organization.
      </Card>
    </div>
  </div>
</Layout>
