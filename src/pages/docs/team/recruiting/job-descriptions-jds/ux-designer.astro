---

<Layout title="UX Designer">
  <main class="py-8 px-4 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto">
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center">
              {index > 0 && <span class="mx-2 text-gray-400">/</span>}
              {crumb.href ? (
                <a href={crumb.href} class="text-sm text-gray-600 hover:text-gray-900">
                  {crumb.text}
                </a>
              ) : (
                <span class="text-sm text-gray-600">{crumb.text}</span>
              )}
            </li>
          ))}
        </ol>
      </nav>

      <div class="mb-12">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">UX Designer</h1>
        <div class="bg-white/60 backdrop-blur-[2px] rounded-xl p-8 my-8 ring-1 ring-white/50">
          <p class="text-[17px] leading-7 text-[#1a1f36]">
            Clear expectations and growth paths for UX designers at every level.
          </p>
        </div>
      </div>

      <div class="space-y-12">
        <section>
          <h2 class="text-xl font-semibold text-[#1a1f36] mb-6">Designer Levels</h2>
          <div class="grid grid-cols-1 gap-4">
            {designerLevels.map(role => (
              <Card {...role} />
            ))}
          </div>
        </section>
      </div>
    </article>
  </main>
</Layout>
