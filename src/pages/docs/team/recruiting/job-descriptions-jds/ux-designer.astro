---
import { getEntry } from 'astro:content';
import Layout from '../../../../../layouts/Layout.astro';

const entry = await getEntry('docs', 'team/recruiting/job-descriptions-jds/ux-designer');

const breadcrumbs = [
  { text: 'Recruiting Team', href: '/docs/team/recruiting' },
  { text: 'Job Descriptions', href: '/docs/team/recruiting/job-descriptions-jds' }
];

const designerLevels = [
  { 
    title: 'Designer I',
    href: '/docs/team/recruiting/job-descriptions-jds/ux-designer/designer-1',
    description: 'Entry-level position for individuals passionate about design, eager to learn, and ready to contribute to our dynamic team.',
    emoji: 'üå±'
  },
  { 
    title: 'Designer II',
    href: '/docs/team/recruiting/job-descriptions-jds/ux-designer/designer-2',
    description: 'Mid-level role ideal for someone with 2-5 years experience ready to take on more complex design challenges.',
    emoji: '‚ö°'
  },
  { 
    title: 'Sr. Designer',
    href: '/docs/team/recruiting/job-descriptions-jds/ux-designer/senior-designer',
    description: 'Lead the design of comprehensive product areas and implement user-centric design strategies.',
    emoji: 'üöÄ'
  },
  { 
    title: 'Lead Designer',
    href: '/docs/team/recruiting/job-descriptions-jds/ux-designer/lead-designer',
    description: 'Guide design vision and strategy across major product areas while leading and mentoring a team.',
    emoji: 'üë•'
  },
  { 
    title: 'Staff Designer',
    href: '/docs/team/recruiting/job-descriptions-jds/ux-designer/staff-designer',
    description: 'Lead and contribute to the design of complex and high-impact product areas.',
    emoji: '‚≠ê'
  },
  { 
    title: 'Principal Designer',
    href: '/docs/team/recruiting/job-descriptions-jds/ux-designer/principal-designer',
    description: 'Shape design vision and strategy across entire user experiences while driving innovation.',
    emoji: 'üéØ'
  }
];
---

<Layout title="UX Designer">
  <main class="py-8 px-4 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto">
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center">
          {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center">
              <a href={crumb.href} class="text-sm text-gray-600 hover:text-gray-900">
                {crumb.text}
              </a>
              {index < breadcrumbs.length - 1 && (
                <span class="mx-2 text-gray-400">/</span>
              )}
            </li>
          ))}
        </ol>
      </nav>
      <div class="prose max-w-none">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px] mb-6">UX Designer</h1>
        <div class="grid grid-cols-1 gap-4">
          {designerLevels.map(level => (
            <a href={level.href} class="block group">
              <div class="gradient-card">
                <div class="flex items-center">
                  <div class="flex-shrink-0 text-2xl mr-4 text-gray-700">
                    {level.emoji}
                  </div>
                  <div>
                    <h3 class="text-[15px] font-medium text-gray-900 leading-none mb-1.5">
                      {level.title}
                    </h3>
                    <p class="text-[13px] text-gray-600 leading-none">{level.description}</p>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </article>
  </main>
</Layout>
