          <h2 class="text-[20px] font-semibold text-[#1a1f36] mb-4">UX Roles</h2>
          <div class="grid grid-cols-1 gap-4">
            {uxRoles.map(role => (
              <Card {...role} />
            ))}
          </div>
        </section>

        <section>
          <h2 class="text-[20px] font-semibold text-[#1a1f36] mb-4">Creative Roles</h2>
          <div class="grid grid-cols-1 gap-4">
