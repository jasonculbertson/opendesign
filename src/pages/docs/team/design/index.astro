---
import Layout from '../../../../layouts/Layout.astro';
import Card from '../../../../components/Card.astro';

const title = "Design Team Resources";
const description = "Essential resources and templates for design teams. Access comprehensive guides for design sprints, project estimation, and team collaboration to streamline your design workflow and improve team productivity.";

const resources = [
  {
    title: 'Sprint Docs',
    description: 'Streamline your design sprints with structured templates and proven methodologies for successful design workshops.',
    href: '/docs/team/design/design-sprint',
    image: 'üèÉ‚Äç‚ôÇÔ∏è'
  },
  {
    title: 'Design T-shirt sizing',
    description: 'Learn effective project estimation techniques using t-shirt sizing to improve resource allocation and project planning.',
    href: '/docs/team/design/t-shirt-sizing',
    image: 'üëï'
  }
