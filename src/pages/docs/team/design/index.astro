---
import { getEntry } from 'astro:content';
import Layout from '../../../../layouts/Layout.astro';
import Card from '../../../../components/Card.astro';

const entry = await getEntry('docs', 'team/design/index');
const { Content } = await entry.render();

const resources = [
  {
    title: 'Sprint Docs',
    description: 'Streamline your design sprints with structured templates',
    href: '/docs/team/design/design-sprint',
    image: '🏃‍♂️'
  },
  {
    title: 'Design T-shirt sizing',
    description: 'Simplify project estimation and resource allocation',
    href: '/docs/team/design/t-shirt-sizing',
    image: '👕'
  }
];

const breadcrumbs = [
  { text: 'Team', href: '/docs/team' },
  { text: 'Design', href: '/docs/team/design' }
];

const title = "Design Team";
---

<Layout title={entry.data.title}>
  <main class="py-8 px-4 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto">
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center">
              {index > 0 && <span class="mx-2 text-gray-400">/</span>}
              {crumb.href ? (
                <a href={crumb.href} class="text-sm text-gray-600 hover:text-gray-900">
                  {crumb.text}
                </a>
              ) : (
                <span class="text-sm text-gray-600">{crumb.text}</span>
              )}
            </li>
          ))}
        </ol>
      </nav>
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
      </div>
      
      <div class="grid grid-cols-1 gap-4">
        {resources.map(resource => (
          <Card {...resource} />
        ))}
      </div>
    </article>
  </main>
</Layout>