---
import Layout from '../../../layouts/Layout.astro';
import VideoCard from '../../../components/VideoCard.astro';

const videos = [
  {
    title: 'Design Leadership with Jason Culbertson',
    timestamp: 'December 22, 2023',
    duration: '43:21',
    thumbnailUrl: 'https://images.unsplash.com/photo-1542744173-8e7e53415bb0?auto=format&fit=crop&w=800&h=450&q=80',
    isDraft: true
  },
  {
    title: 'Building Design Systems at Scale',
    timestamp: 'December 15, 2023',
    duration: '38:15',
    thumbnailUrl: 'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?auto=format&fit=crop&w=800&h=450&q=80',
  },
  {
    title: 'From designer to founder â€” Masoud Ardestani on building Rapha and making hiring human.',
    timestamp: 'November 30, 2023',
    duration: '56:16',
    thumbnailUrl: 'https://img.youtube.com/vi/SpGlXrvzQeE/maxresdefault.jpg',
    href: 'https://www.youtube.com/watch?v=SpGlXrvzQeE'
  }
];

const [featuredVideo, ...otherVideos] = videos;
const title = "Design Leadership Interviews";
---

<Layout title={title}>
  <main class="py-8 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto px-4 sm:px-0">
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
        <p class="mt-2 text-[15px] text-[#3c4257]">Learn from experienced design leaders through in-depth interviews.</p>
      </div>

      <!-- Featured Video -->
      <div class="mb-8">
        <VideoCard {...featuredVideo} />
      </div>

      <!-- Other Videos Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {otherVideos.map(video => (
          <VideoCard {...video} />
        ))}
      </div>
    </article>
    
    <div class="max-w-[680px] mx-auto px-4 sm:px-0 mt-12">
      <div class="rounded-xl bg-gradient-to-r from-[#f5f5f5] to-[#fafafa] p-1 shadow-sm border border-[#e5e7eb]">
        <iframe 
          src="https://opendesigndocs.substack.com/embed" 
          width="100%" 
          height="320" 
          class="rounded-lg bg-white w-full"
          style="border: none;" 
          frameborder="0" 
          scrolling="no"
          loading="lazy"
        ></iframe>
      </div>
    </div>
  </main>
</Layout>
