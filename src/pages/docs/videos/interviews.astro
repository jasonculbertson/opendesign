---
import Layout from '../../../layouts/Layout.astro';
import VideoCard from '../../../components/VideoCard.astro';

const videos = [
  {
    title: 'Design Leadership with Jason Culbertson',
    timestamp: 'December 22, 2023',
    duration: '43:21',
    thumbnailUrl: 'https://images.unsplash.com/photo-1542744173-8e7e53415bb0?auto=format&fit=crop&w=800&h=450&q=80',
    isDraft: true
  },
  {
    title: 'Building Design Systems at Scale',
    timestamp: 'December 15, 2023',
    duration: '38:15',
    thumbnailUrl: 'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?auto=format&fit=crop&w=800&h=450&q=80',
  },
  {
    title: 'The Future of Product Design',
    timestamp: 'December 8, 2023',
    duration: '45:30',
    thumbnailUrl: 'https://images.unsplash.com/photo-1531403009284-440f080d1e12?auto=format&fit=crop&w=800&h=450&q=80',
  }
];

const title = "Design Leadership Interviews";
---

<Layout title={title}>
  <main class="py-8 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto px-4 sm:px-0">
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
        <p class="mt-2 text-[15px] text-[#3c4257]">Learn from experienced design leaders through in-depth interviews.</p>
      </div>

      <div class="grid grid-cols-1 gap-4">
        {videos.map(video => (
          <VideoCard {...video} />
        ))}
      </div>
    </article>
  </main>
</Layout>
