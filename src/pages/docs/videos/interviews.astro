---
import Layout from '../../../layouts/Layout.astro';
import VideoCard from '../../../components/VideoCard.astro';

const videos = [
  {
    title: 'From designer to founder â€” Masoud Ardestani on building Rapha and making hiring human.',
    timestamp: 'November 30, 2023',
    duration: '56:16',
    thumbnailUrl: 'https://img.youtube.com/vi/SpGlXrvzQeE/maxresdefault.jpg',
    href: 'https://www.youtube.com/watch?v=SpGlXrvzQeE'
  }
];

const title = "Design Leadership Interviews";
---

<Layout title={title}>
  <main class="py-8 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto px-4 sm:px-0">
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
        <p class="mt-2 text-[15px] text-[#3c4257]">Learn from experienced design leaders through in-depth interviews.</p>
      </div>

      <div class="grid grid-cols-1 gap-4">
        {videos.map(video => (
          <VideoCard {...video} />
        ))}
      </div>
    </article>
  </main>
</Layout>
