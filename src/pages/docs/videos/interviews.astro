---
import Layout from '../../../layouts/Layout.astro';
import VideoCard from '../../../components/VideoCard.astro';

const videos = [
  {
    title: 'From designer to founder â€” Masoud Ardestani on building Rapha and making hiring human.',
    timestamp: 'November 30, 2023',
    duration: '56:16',
    thumbnailUrl: 'https://img.youtube.com/vi/SpGlXrvzQeE/maxresdefault.jpg',
    href: 'https://www.youtube.com/watch?v=SpGlXrvzQeE',
    description: 'Learn from Masoud Ardestani's journey from designer to founder, exploring the challenges and insights of building Rapha and humanizing the hiring process.'
  }
];

const title = "Design Leadership Interviews";
const description = "Exclusive interviews with design leaders and founders sharing their journeys, challenges, and insights. Get first-hand knowledge about building design teams, scaling organizations, and navigating leadership roles in design.";
---

<Layout 
  title={title}
  description={description}
  type="video"
  image={videos[0].thumbnailUrl}
>
  <main class="py-8 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto px-4 sm:px-0">
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
        <p class="mt-2 text-[15px] text-[#3c4257]">In-depth conversations with design leaders about their experiences, strategies, and lessons learned in building and leading design teams.</p>
      </div>

      <!-- Videos Grid -->
      <div class="grid grid-cols-1 gap-6">
        {videos.map(video => (
          <VideoCard {...video} />
        ))}
      </div>
    </article>
  </main>
</Layout>
