---
import Layout from '../../../../../layouts/Layout.astro';
import Card from '../../../../../components/Card.astro';

const title = "Level Competencies";

const breadcrumbs = [
  { text: 'Month 1', href: '/docs/month-1' }
];

const resources = [
  {
    title: 'IC1',
    description: 'Level competencies for IC1 designers',
    href: '/docs/month-1/level-competencies/ic1',
    image: '👩‍💻'
  },
  {
    title: 'Content Designer',
    description: 'Level competencies for content designers',
    href: '/docs/month-1/level-competencies/content-designer',
    image: '📝'
  },
  {
    title: 'Graphic Designer',
    description: 'Level competencies for graphic designers',
    href: '/docs/month-1/level-competencies/graphic-designer',
    image: '🎨'
  },
  {
    title: 'Product Designer',
    description: 'Level competencies for product designers',
    href: '/docs/month-1/level-competencies/product-designer',
    image: '💡'
  },
  {
    title: 'Design Ops',
    description: 'Level competencies for design operations',
    href: '/docs/month-1/level-competencies/design-ops',
    image: '⚙️'
  },
  {
    title: 'Manager',
    description: 'Level competencies for design managers',
    href: '/docs/month-1/level-competencies/manager',
    image: '👥'
  },
  {
    title: 'Photographer',
    description: 'Level competencies for photographers',
    href: '/docs/month-1/level-competencies/photographer',
    image: '📸'
  },
  {
    title: 'Researcher',
    description: 'Level competencies for design researchers',
    href: '/docs/month-1/level-competencies/researcher',
    image: '🔍'
  },
  {
    title: 'Copywriter',
    description: 'Level competencies for copywriters',
    href: '/docs/month-1/level-competencies/copywriter',
    image: '✍️'
  }
];
---

<Layout title={title}>
  <main class="py-8 px-4 sm:px-6 lg:px-8">
    <article class="max-w-[680px] mx-auto">
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center">
          {breadcrumbs.map((crumb) => (
            <li>
              <a href={crumb.href} class="text-sm text-gray-600 hover:text-gray-900">
                {crumb.text}
              </a>
            </li>
          ))}
        </ol>
      </nav>
      <div class="mb-8">
        <h1 class="text-[32px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{title}</h1>
      </div>
      <div class="grid grid-cols-1 gap-4">
        {resources.map(resource => (
          <Card {...resource} />
        ))}
      </div>
    </article>
  </main>
</Layout>