---
import AuthLayout from '../layouts/AuthLayout.astro';
import LoginForm from '../components/Auth/LoginForm.astro';
---

<AuthLayout title="Login - Open Design Docs">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-88px)]">
    <div class="w-full max-w-[420px] px-4">
      <div class="mb-8 text-center">
        <h1 class="text-[28px] font-semibold text-gray-900 mb-2">
          Log in to Open Design Docs
        </h1>
        <p class="text-[15px] text-gray-600">
          Don't have an account?{' '}
          <a href="/signup" class="text-blue-600 hover:text-blue-700">Sign up</a>
        </p>
      </div>

      <LoginForm />
    </div>
  </div>
</AuthLayout>
