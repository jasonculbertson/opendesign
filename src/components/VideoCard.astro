---
interface Props {
  title: string;
  timestamp: string;
  duration: string;
  thumbnailUrl: string;
  isDraft?: boolean;
}

const { title, timestamp, duration, thumbnailUrl, isDraft = false } = Astro.props;
---

<div class="group relative rounded-2xl overflow-hidden bg-white shadow-sm hover:shadow-md transition-shadow">
  <div class="aspect-video relative overflow-hidden">
    <img 
      src={thumbnailUrl} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
    <div class="absolute bottom-2 right-2 px-2 py-1 bg-black/70 rounded text-white text-sm font-medium">
      {duration}
    </div>
    {isDraft && (
      <div class="absolute top-3 right-3 px-3 py-1 bg-[#f4804f] rounded-lg text-white text-sm font-medium">
        Draft
      </div>
    )}
  </div>
  <div class="p-4">
    <h3 class="text-xl font-semibold text-gray-900 mb-1">{title}</h3>
    <p class="text-gray-400">{timestamp}</p>
  </div>
</div>
