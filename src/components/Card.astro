---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}

const { title, description, href, image } = Astro.props;
---

<a href={href} class="block group">
  <div class="bg-white/10 hover:bg-white/[0.15] backdrop-blur-sm rounded-xl p-4 transition-all shadow-sm hover:shadow ring-1 ring-white/[0.06]">
    <div class="flex items-center">
      <div class="flex-shrink-0 text-2xl mr-4 text-white/80">
        {image}
      </div>
      <div>
        <h3 class="text-[15px] font-medium text-white/90 leading-none mb-1.5">
          {title}
        </h3>
        <p class="text-[13px] text-white/60 leading-none">{description}</p>
      </div>
    </div>
  </div>
</a>