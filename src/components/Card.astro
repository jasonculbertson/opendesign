---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}

const { title, description, href, image } = Astro.props;
---

<a href={href} class="block">
  <div class="bg-white/5 hover:bg-white/10 rounded-xl p-4 transition-all">
    <div class="flex items-center">
      <div class="text-2xl mr-4">
        {image}
      </div>
      <div>
        <h3 class="text-[15px] font-medium text-white/90 leading-none mb-1">
          {title}
        </h3>
        <p class="text-[13px] text-white/60 leading-none">{description}</p>
      </div>
    </div>
  </div>
</a>