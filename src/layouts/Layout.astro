---
import Sidebar from '../components/Sidebar.astro';
import { Layers } from 'lucide-react';
import '../styles/main.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Open Design Documentation" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 text-[#425466] antialiased min-h-screen">
    <header class="fixed top-0 left-0 right-0 h-14 bg-gray-100 z-50 flex items-center">
      <div class="flex items-center pl-8">
        <Layers className="w-5 h-5 text-indigo-600 mr-2.5" />
        <span class="text-[15px] font-medium text-gray-900">Open Design Docs</span>
      </div>
      <div class="ml-auto pr-8">
        <a href="/about" class="text-[15px] text-gray-600 hover:text-gray-900">About</a>
      </div>
    </header>
    <Sidebar currentPath={Astro.url.pathname} />
    <div class="fixed inset-0 left-[220px] p-6 pt-20">
      <div class="bg-white rounded-lg shadow-sm h-[calc(100vh-5rem)] relative">
        <div class="absolute inset-0 overflow-auto p-8">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>