---
import { ViewTransitions } from 'astro:transitions';
import Sidebar from '../components/Sidebar.astro';
import { shouldShowSubstack } from '../utils/pageUtils';
import '../styles/main.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const path = Astro.url.pathname;
const showSubstack = shouldShowSubstack(path);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Open Design Docs" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex min-h-screen">
      <Sidebar currentPath={path} />
      
      <main class="flex-1 lg:pl-[250px]">
        <div class="pt-20 lg:pt-20">
          <div class="max-w-[900px] mx-auto px-4 sm:px-0">
            <div class="relative max-w-[680px]">
              <slot />
            </div>
            {showSubstack && (
              <div class="pb-12 max-w-[680px]">
                <div class="bg-white p-6">
                  <iframe
                    src="https://opendesigndocs.substack.com/embed"
                    width="100%"
                    height="150"
                    style="border:2px solid #EFF4FA; background:#EFF4FA; border-radius:8px;"
                    frameborder="0"
                    scrolling="no"
                  ></iframe>
                </div>
              </div>
            )}
          </div>
        </div>
      </main>
    </div>
    <ViewTransitions />
  </body>
</html>